<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="420.0"
	style="-fx-background-color: WHITE;"
	xmlns="http://javafx.com/javafx/10.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox layoutX="33.0" layoutY="115.0" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="208.0" prefWidth="355.0" spacing="35.0"
			style="-fx-background-color: WHITE;">
			<children>
				<JFXTextField fx:id="fieldDescricao" labelFloat="true"
					promptText="Descrição">
					<font>
						<Font size="18.0" />
					</font>
				</JFXTextField>
				<JFXTextField fx:id="fieldUsuario" labelFloat="true"
					promptText="Usuário">
					<font>
						<Font size="18.0" />
					</font>
				</JFXTextField>
				<JFXTextField fx:id="fieldSenha" labelFloat="true"
					prefHeight="40.0" prefWidth="218.0" promptText="Senha">
					<font>
						<Font size="18.0" />
					</font>
				</JFXTextField>
			</children>
		</VBox>
		<JFXButton fx:id="btnConfirmar" layoutX="33.0"
			layoutY="387.0" onAction="#salvar"
			style="-fx-background-color: #c8c8c8;" text="Confirmar">
			<font>
				<Font size="16.0" />
			</font>
		</JFXButton>
		<JFXButton layoutX="295.0" layoutY="387.0"
			onAction="#cancelar" style="-fx-background-color: #c8c8c8;"
			text="Cancelar">
			<font>
				<Font size="16.0" />
			</font>
		</JFXButton>
	</children>
</AnchorPane>
