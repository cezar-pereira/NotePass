<AnchorPane prefHeight="200.0" prefWidth="200.0"
	xmlns="http://javafx.com/javafx/10.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<ImageView fitHeight="120.0" fitWidth="120.0"
